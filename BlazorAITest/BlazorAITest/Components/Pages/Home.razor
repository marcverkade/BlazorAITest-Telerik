@page "/"
@using Telerik.Blazor
@using Telerik.Blazor.Components

<PageTitle>Home</PageTitle>

<h1>Hello, Telerik Sample!</h1>

Welcome to a Telerik controls sample app.<br/>
<br />
@* Add telerik textbox and a button to show the values with a Telerik dialog *@
<TelerikTextBox Placeholder="Enter text here..." @bind-Value="@textValue" />
<CascadingValue Value="Dialogs">
    <TelerikButton OnClick="ShowAlert">Show Telerik dialog with the TelerikTextbox Value</TelerikButton>
</CascadingValue>

@code {

    [CascadingParameter] DialogFactory? Dialogs { get; set; }

    private string textValue = string.Empty;

    private async Task ShowAlert()
    {
        // Telerik dialogs are used to show alerts, confirmations, and prompts.
        await Dialogs!.AlertAsync(textValue);
    }
}